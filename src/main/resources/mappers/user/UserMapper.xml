<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="user">

    <insert id="signUp" parameterType="map">
        INSERT INTO user (user_id, user_pwd)
        VALUES (#{userId}, #{userPwd});
    </insert>

    <select id="findUserById" parameterType="String" resultType="com.myproject.mybackend.user.model.dto.UserDTO">
        select *
        from user
        where user_id = #{userId}
    </select>

    <select id="checkDupId" parameterType="String" resultType="int">
        select count(*)
        from user
        where user_id = #{reqId}
    </select>

</mapper>